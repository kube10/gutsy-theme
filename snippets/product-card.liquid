<style>
.product-details-grid {
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: 60vh 1fr;
  height: 100%;
}

.product-details-content-inner {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.product-details-actions > .button-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.product-details-card-price-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.product-details-content {
  padding: 2rem 1rem;
}

.product-details-section-inner {
  margin: 0;
}

.product-media-slideshow {
  position: relative;
  height: 60vh;
}

.media-wrap {
  position: relative;
}

.product-details-slide-img {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  transition: opacity .5s ease;
  max-width: 100%;
  max-height: 60vh;
}

.next-slide-btn {
  position: absolute;
  top: 50%;
  right: calc(1rem - 7.5px);
  transform: translateY(-50%);
  cursor: pointer;
}

.product-media-slideshow > .controls {
  position: relative;
  z-index: 10;
  width: 100%;
  height: 100%;
}

.dummy {
  display: block !important;
}

.count {
  position: absolute;
  bottom: 1.75rem;
  right: 2rem;
}

.slideshow-dots {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
}

.slideshow-dot {
  width: .75em;
  height: .75rem;
  border-radius: 50%;
  margin-left: .25rem;
  margin-right: .25rem;
  background-color: white;
  opacity: .6;
  transition: opacity .3s ease;
  display: block !important;
  cursor: pointer;
  -webkit-box-shadow: 0px 6px 6px 0px rgba(0,0,0,0.2);
  box-shadow: 0px 6px 6px 0px rgba(0,0,0,0.2);
};

@media screen and (min-width: 1080px) {
  .product-media-slideshow {
    position: relative;
    height: auto;
  }

  .next-slide-btn {
    right: 16px;
  }

  .product-details-content {
    padding: 2rem;
  }
}

</style>

{% assign type = "" %}
{% for tag in product_card_product.tags %}
  {% case tag %}
    {% when "puppy" %}
    {% assign type = "puppy" %}
    {% when "adult-s" %}
    {% assign type = "adult-s" %}
    {% when "adult-l" %}
    {% assign type = "adult-l" %}
  {% endcase %}
{% endfor %}

<section class="product-details-section-inner {{type}} product-card">
  <div class="product-details-grid">
    <div class="product-media-slideshow">
      <div class="controls">
          <div class="next-slide-btn">
              {% render 'icon-arrow-right-orange' %}
          </div>
          <div class="controls-bottom-row">
            <div class="dummy"></div>
            <div class="slideshow-dots">
              {%- for media in product_card_product.media -%}
                  <div id="{{forloop.index}}" class="slideshow-dot"></div>
              {%- endfor -%}
            </div>
            <div class="count">
              {%- assign count = product_card_product.media | size -%}
              <span class="currentSlideNo">1</span>/<span>{{ count }}</span>
            </div>
          </div>
      </div>
        {% for media in product_card_product.media %}
          <img class="product-details-slide-img" src="{{ media | image_url: width: 500 }}" alt="">
        {% endfor %}
    </div>
    <div class="product-details-content {{type}}">
      <div class="product-details-content-inner">
        <div data-scroll class="product-details-text-content">
          <h2>{{ product_card_product.title | escape }}</h2>
          {% if product_card_product.metafields.custom_fields["tagline"] != blank %}
          <h4>{{ product_card_product.metafields.custom_fields["tagline"] }}</h4>
          {% endif %}
          <p>{{product_card_product.content}}</p>
        </div>

        <div class="product-details-card-bottom">
          <div class="h2 product-details-card-price-wrap">{% render 'price', product: product_card_product, price_class: '' %}</div>
          <div class="product-details-actions">
            <div class="button-group">
              <a href="{{product_card_product.url}}" class="button button-secondary">MORE INFO</a>
              <button id="{{product_card_product.id}}" class="open-product-modal-btn button button-primary">BUY NOW</button>
            </div>
          </div>
        </div>
        {% render 'product-modal', product: product_card_product %}
      </div>
    </div>
  </div>
</section>
