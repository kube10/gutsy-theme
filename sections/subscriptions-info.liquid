{{ "section-subscriptions-info.css" | asset_url | stylesheet_tag }}

<div class="section-subscriptions-info-inner color-{{section.settings.color_scheme}} section-padding">
  <div class="page-width">
    <div class="subscriptions-info-section__cards">
        {%- for block in section.blocks -%}
            <div data-scroll class="subscriptions-info__card">
              {{block.settings.svg_icon}}
              <div class="subscriptions-info__card-heading">
                <h2 class="color-{{section.settings.subheading_color}}">{{block.settings.title}}</h2>
              </div>
              <p>{{block.settings.content}}</p>
            </div>
        {%- endfor -%}
    </div>
    <div class="subscriptions-info-section__bottom">
      <a href="{{section.settings.button_href}}" class="button button-secondary">{{section.settings.button_text}}</a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Subscriptions Info",
  "tag": "section",
  "class": "section-subscriptions-info",
  "blocks": [
    {
      "type": "info",
      "name": "Content Block",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "textarea",
          "id": "svg_icon",
          "label": "SVG Icon code"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "bg-green",
          "label": "Green Background"
        },
        {
          "value": "bg-beige",
          "label": "Beige Background"
        },
        {
          "value": "bg-white",
          "label": "White Background"
        }
      ],
      "default": "bg-white",
      "label": "t:sections.rich-text.settings.color_scheme.label"
    },
    {
      "type": "text",
      "id":"button_text",
      "label": "Button Text",
      "default": "Discover all the benefits"
    },
    {
      "type": "url",
      "id": "button_href",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Subscriptions Info"
    }
  ]
}
{% endschema %}
