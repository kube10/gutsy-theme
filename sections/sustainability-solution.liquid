{{ 'section-sustainability-solution.css' | asset_url | stylesheet_tag }}


<div class="sustainability-section-inner color-{{section.settings.color_scheme}} section-padding">
  <div class="page-width">
    <div class="sustainability-solution__grid">
      <div style="height: {{section.settings.img_height}}px" class="sustainability-solution__img-wrap">
        <img src="{{ section.settings.image | image_url }}" class="image-cover" alt="">
      </div>
      <div class="sustainability-solution__content-wrap">
        <h1 class="color-{{section.settings.heading_color}}">{{section.settings.heading}}</h1>
        <p>{{section.settings.text}}</p>
      </div>
    </div>
  </div>
</div>

{%- schema -%}
{
  "name": "Sustainability Solution",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "bg-green",
          "label": "Green Background"
        },
        {
          "value": "bg-beige",
          "label": "Beige Background"
        },
        {
          "value": "bg-white",
          "label": "White Background"
        }
      ],
      "default": "bg-green",
      "label": "t:sections.rich-text.settings.color_scheme.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image (left)"
    },
    {
      "type": "select",
      "id": "heading_color",
      "label": "Kleur Headline",
      "default": "primary-2",
      "options": [
        {
          "value": "primary-1",
          "label": "Gutsy Green"
        },
        {
          "value": "primary-2",
          "label": "Gutsy Orange"
        },
        {
          "value": "primary-3",
          "label": "Gutsy Beige"
        }
      ]
    },
    {
      "type": "range",
      "id": "img_height",
      "label": "Image Height",
      "default": 450,
      "min": 200,
      "max": 750,
      "step": 10,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Sustainability Solution"
    }
  ]
}
{%- endschema -%}
