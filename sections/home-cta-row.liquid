{{ "section-cta.css" | asset_url | stylesheet_tag }}

<div class="cta-section-inner color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="cta-section__left section-padding">
      <h1 data-scroll class="color-{{ section.settings.heading_color}}">{{section.settings.headline}}</h1>
      <div data-scroll class="cta-section__home-cta">
        <h3 class="color-{{ section.settings.subheading_color}}">{{section.settings.subheadline}}</h3>
        <button onclick="toNextSection()" class="button button-borderless">
          <svg width="49" height="49" viewBox="0 0 49 49" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="48.6504" y="0.972656" width="48" height="48" rx="24" transform="rotate(90 48.6504 0.972656)" fill="#F47F36"/>
            <path d="M25.6503 16.9727L23.6503 16.9727L23.6503 28.9727L18.1503 23.4727L16.7303 24.8927L24.6503 32.8127L32.5703 24.8927L31.1503 23.4727L25.6503 28.9727L25.6503 16.9727Z" fill="white"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
  <div class="cta-section__right" style="background-image: url({{section.settings.image | image_url: width: 1080}})">
  </div>
</div>

<script type="text/javascript">
  function toNextSection() {
    const section = document.querySelector('.homepage-products__inner');
    section.scrollIntoView({ behavior: "smooth" });
  }
</script>

{% schema %}
{
  "name": "Home CTA Section",
  "tag": "section",
  "class": "section-cta",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "bg-green",
          "label": "Green Background"
        },
        {
          "value": "bg-beige",
          "label": "Beige Background"
        },
        {
          "value": "bg-white",
          "label": "White Background"
        }
      ],
      "default": "bg-green",
      "label": "t:sections.rich-text.settings.color_scheme.label"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Visit the shop today!"
    },
    {
      "type": "select",
      "id": "heading_color",
      "label": "Kleur Headline",
      "default": "primary-2",
      "options": [
        {
          "value": "primary-1",
          "label": "Gutsy Green"
        },
        {
          "value": "primary-2",
          "label": "Gutsy Orange"
        },
        {
          "value": "primary-3",
          "label": "Gutsy Beige"
        }
      ]
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "We have amazing stuff."
    },
    {
      "type": "select",
      "id": "subheading_color",
      "label": "Kleur Subheadline",
      "default": "primary-3",
      "options": [
        {
          "value": "primary-1",
          "label": "Gutsy Green"
        },
        {
          "value": "primary-2",
          "label": "Gutsy Orange"
        },
        {
          "value": "primary-3",
          "label": "Gutsy Beige"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Home CTA Section"
    }
  ]
}
{% endschema %}
