{{ 'section-about-header.css' | asset_url | stylesheet_tag }}

<div class="about-header-section__inner">
  <div class="about-header-section__content-wrap page-width">
    <div class="about-header-section__content">
      <h1 class="color-primary-3">
      {{section.settings.headline}}</h1>
      <p class="about-header-section__paragraph">{{section.settings.paragraph}}</p>
    </div>
  </div>
  <div class="about-header-section__background">
    <video muted autoplay loop class="about-header-section__background-video" src="{{section.settings.video_url}}"></video>
  </div>
</div>
<script type="text/javascript">
  function toNextSection() {
    const section = document.querySelector('#shopify-section-template--14312058126390__164181877859f3462b');
    section.scrollIntoView({behavior: "smooth"})
  }
</script>
{% schema %}
{
  "name": "About Page Header",
  "tag": "section",
  "class": "about-header-section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL"
    }
  ],
  "presets": [
    {
      "name": "About Page Header"
    }
  ]
}
{% endschema %}
