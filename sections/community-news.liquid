{{ "section-community-news.css" | asset_url | stylesheet_tag }}

<div class="page-width">
  <h1 class="color-primary-1 center community-news__header">{{ section.settings.heading }}</h1>
  <div class="community-news__content">
    {%- for block in section.blocks -%}
      <div class="community-news__item">
        <div class="community-news__image-wrap">
          <img src="{{ block.settings.image | image_url }}" alt="">
        </div>
        <div class="community-news__content">
          <div class="community-news__tag">{{ block.settings.tag }}</div>
          <h4 class="color-primary-2 community-news__article-title">{{ block.settings.heading }}</h4>
          <div class="community-news__article-content">{{ block.settings.content }}</div>
          <a href="{{ block.settings.url }}" class="button button-borderless color-primary-1">READ THE FULL ARTICLE {% render 'icon-arrow-left-green' %}</a>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{%- schema -%}
{
  "name": "Community News",
  "tag": "section",
  "class": "section-community-news section-padding color-bg-beige",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gutsy News"
    }
  ],
  "blocks": [
    {
      "type": "article",
      "name": "Article",
      "settings": [
        {
          "type":"text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "tag",
          "label": "Tag"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Community News"
    }
  ]
}
{%- endschema -%}
