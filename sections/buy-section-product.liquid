{{ 'section-buy-product.css' | asset_url | stylesheet_tag }}
{{ 'component-product-form.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<section class="page-width">
  <div class="buy-section-content">
    <h1>{{section.settings.headline}}</h1>
    <h3>Try {{product.title | escape}} today</h3>
    {% render 'product-form', colorScheme: "bg-beige" %}
  </div>
</section>

{{ 'component-calculator.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "Product Buy Section",
  "tag": "section",
  "class": "product-buy-section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Convinced?"
    }
  ]
}
{% endschema %}
