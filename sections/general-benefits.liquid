{{ 'section-general-benefits.css' | asset_url | stylesheet_tag }}

<div class="general-benefits-section__inner section-padding">
  <div class="page-width text-center">
    <div class="general-benefits-section__headings">
      <h1 class="color-primary-2">{{section.settings.headline}}</h1>
      <h3 class="color-primary-1">{{section.settings.subheadline}}</h3>
    </div>
    <div class="general-benefits-section__grid">
      {%- for block in section.blocks -%}
          <div class="general-benefits-section__card">
            <div class="general-benefits-section__card-heading">
              {{block.settings.icon}}
              <h2 class="color-primary-1">{{block.settings.headline}}</h2>
            </div>
            <p>{{block.settings.paragraph}}</p>
          </div>
      {%- endfor -%}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "General Benefits",
  "tag": "section",
  "class": "general-benefits-section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline"
    }
  ],
  "blocks": [
    {
      "type": "usp",
      "name": "Benefit Block",
      "limit": 6,
      "settings": [
        {
          "type": "text",
          "id": "headline",
          "label": "Headline"
        },
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph"
        },
        {
          "type": "textarea",
          "id": "icon",
          "label": "SVG Icon Code"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Insect Benefits"
    }
  ]
}
{% endschema %}
